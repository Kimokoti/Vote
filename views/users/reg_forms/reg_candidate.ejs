<div class="well reg-form">
                    <form class="form-horizontal" method="post" id="reg_candidates"  action="ru">
                        <fieldset>
                            <legend class="table_heads">Register Candidate</legend>

                            <input type="hidden" id="userType" name="userType" value="candidate">

                            <div class="form-group form-reg">
                                    <div class="col-lg-10 col-lg-offset-2 reg_error" id="error-username">                                       
                                    </div>
                            </div>
                           
                            <div class="form-group">
                                <label for="userName" class="col-lg-2 control-label">Candidate Name</label>
                                <div class="col-lg-10">
                                    <input class="form-control" id="userName" name="userName" placeholder="Candidate Name" type="text">
                                </div>
                            </div>

                            <div class="form-group form-reg">
                                    <div class="col-lg-10 col-lg-offset-2 reg_error" id="error-address">                               
                                    </div>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail" class="col-lg-2 control-label">Email</label>
                                <div class="col-lg-10">
                                    <input class="form-control" id="inputEmail" name="inputEmail" placeholder="Email" type="text">
                                </div>
                            </div>

                            <div class="form-group form-reg">
                                    <div class="col-lg-10 col-lg-offset-2 reg_error" id="error-reg"></div>
                            </div>

                            <div class="form-group">
                                <label for="regNumber"  class="col-lg-2 control-label">Reg Number</label>
                                <div class="col-lg-10">
                                    <input class="form-control" id="regNumber" name="regNumber" placeholder="Registration Number" type="text">
                                </div>
                            </div>

                            <div class="form-group form-reg">
                                    <div class="col-lg-10 col-lg-offset-2 reg_error" id="error-gender">                                       
                                    </div>
                            </div>

                             <div class="form-group">
                                <label for="rad_gender" class="col-lg-2 control-label">Gender</label>
                                <div class="col-lg-10">      
                                        <label class="radio-inline">
                                            <input type="radio" name="rad_gender" id="gender1" value="Female" >Female
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" name="rad_gender" id="gender2" value="Male" >Male
                                        </label>
                                </div>
                            </div>

                            <div class="form-group form-reg">
                                    <div class="col-lg-10 col-lg-offset-2 reg_error" id="error-position">                 
                                    </div>
                            </div>

                            <div class="form-group">
                                <label for="position" class="col-lg-2 control-label">Position</label>
                                <div class="col-lg-10">
                                    <select class="form-control" name="position" id="position">
                                        <option></option>
                                        <option value="President">President</option>
                                        <option value="Accommodation">Accommodation</option>
                                        <option value="Finance">Finance</option>
                                        <option value="Sports and Gender">Sports and Gender</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-4 col-lg-offset-8">
                                    <input type="submit" name="reg" id="register" value="REGISTER CANDIDATE" class="btn btn-success">
                                </div>
                            </div>
                        </fieldset>
                    </form>
</div>
                